<article class="container">
  <h1> EDIT PRODUCT! </h1>
    <div id="new_item">
        <form method="post" action="/products/<%= @product.id %>">

          <label for="name">Name: </label>
          <input id="name" type="text" name="name" value= "<%= @product.name %>"/>
          <br>

          <label for="manufacturer_select">Select manufacturer:</label>
          <select id="manufacturer_select" type="text" name="manufacturer_id">
              <% for manufacturer in @manufacturers %>
              <option value=<%=manufacturer.id%> <%= "selected" if @product.manufacturer_id == manufacturer.id%>><%= manufacturer.name%></option>
              <% end %>
          </select>
          <br>

          <label for="category_select">Select category:</label>
          <select id="category_select" type="text" name="category_id">
              <% for category in @categories %>
              <option value=<%=category.id%> <%= "selected" if @product.category_id == category.id%>><%= category.name%></option>
              <% end %>
          </select>
          <br>

          <label for="quantity">Quantity:</label>
          <input id="quantity" type="number" name="quantity" value= "<%= @product.quantity %>"/>
          <br>

          <label for="unit">Unit:</label>
          <input id="unit" type="text" name="unit" value= "<%= @product.unit %>"/>
          <br>

          <label for="description">Description:</label>
          <input id="description" type="textarea" name="description"/>
          <br>

          <label for="ideal_amount">Ideal Amount:</label>
          <input id="ideal_amount" type="number" name="ideal_amount" value= "<%= @product.ideal_amount %>"/>
          <br>

          <input type="submit" value="Update Product"/>

        </form>
      </div>
  </article>
