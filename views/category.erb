<article class="container">
  <section id="manufacturers">
  <h1> All <%= @category.name %> products: </h1>

      <table class="full_stock_table">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Manufacturer</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Ideal Amount</th>
            <th>Buy For</th>
            <th>Sell For</th>
            <th>Edit</th>
            <th>Del</th>
          </tr>
        </thead>
        <tbody>
          <% for product in @products %>
            <% if @category.id == product.category_id %>
              <tr>
                <td class="text-center">
                    <p>  <%= product.id %> </p>
                </td>
                <td>
                    <p> <%= product.name %> </p>
                </td>
                <td>
                    <p> <%= product.manufacturer.name %> </p>
                </td>
                <!-- <td class="ellipsis">
                    <p> <%= product.description %> </p>
                </td> -->
                <td class="text-center">
                    <p> <%= product.quantity %> </p>
                </td>
                <td class="text-center">
                    <p> <%= product.unit %> </p>
                </td>
                <td class="text-center">
                    <p> <%= product.ideal_amount %> </p>
                </td>
                <td class="text-center">
                    <p> <%= product.cost_price %> </p>
                </td>
                <td class="text-center">
                    <p> <%= product.sell_price %> </p>
                </td>
                <td class="text-center">
                  <form method="get" action="/products/<%= product.id %>/edit">
                      <p><input type="image" src="/img/edit.png"/></p>
                  </form>
                </td>
                <td class="text-center">
                  <form method="post" action="/products/<%= product.id %>/delete">
                      <p><input type="image" src="/img/delete.png"/></p>
                  </form>
                </td>
              </tr>
            <% end %>
            <% end %>

        </tbody>
      </table>
    </section>
</article>
