<article class="container">
  <div class="flex-container">
      <% for category in @categories%>
        <div class="image">
          <a href="/categories/<%= category.id%>">
            <% if category.image != nil %>
            <img src="/img/categories/<%= category.image%>"/>

            <% else %>
            <img src="/img/no-image.png"/>
            <% end %>
              <p> <%= category.name %> </p>
            </a>
        </div>
      <% end %>
  </div>
</article>
